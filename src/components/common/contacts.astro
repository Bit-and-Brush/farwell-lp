---
import ContactCardItem from "./contact-card-item.astro";

type Props = {
  contacts: ReadonlyArray<{
    title: string;
    value: string;
    icon?: string;
  }>;
};

const { contacts } = Astro.props;
---

<ul class="space-y-6">
  {
    contacts.map(({ title, value, icon }) => (
      <ContactCardItem title={title} content={value} iconUrl={icon} />
    ))
  }
</ul>
