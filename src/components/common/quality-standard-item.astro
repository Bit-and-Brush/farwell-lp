---
import { Image } from "astro:assets";

type Props = {
  title: string;
  description: string;
  iconUrl?: string;
};

const { title, description, iconUrl } = Astro.props;
---

<li class="flex flex-col items-center text-center">
  {
    iconUrl && (
      <div class="bg-primary/10 flex size-16 items-center justify-center rounded-full">
        <Image src={iconUrl} alt={title} width={32} height={32} />
      </div>
    )
  }
  <h3 class="text-secondary mt-4 mb-2 text-xl font-bold">{title}</h3>
  <p class="text-sm">{description}</p>
</li>
