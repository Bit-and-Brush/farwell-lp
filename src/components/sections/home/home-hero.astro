---
import type { HeroData } from "@/api/type";
import ButtonLink from "@/components/common/button-link.astro";
import { Image } from "astro:assets";

type Props = Partial<HeroData>;

const {
  description,
  highlight,
  image: imageUrl,
  keyValue,
  title,
} = Astro.props;
---

<section class="hero-gradient">
  <div class="container grid items-center gap-12 py-20 lg:grid-cols-2">
    <div class="space-y-6">
      <h1 class="text-secondary text-3xl font-bold">
        {title}<br /><span class="text-primary">{highlight}</span>
      </h1>
      <p class="text-lg">
        {description}
      </p>
      <div class="flex flex-col gap-4 md:flex-row">
        <ButtonLink href="/products">Nossos produtos</ButtonLink>
      </div>
      {
        keyValue && (
          <ul class="flex items-center justify-between pt-6 text-center text-xs">
            {keyValue.map(({ image, label }) => (
              <li class="flex flex-col items-center space-y-2">
                <Image
                  width={32}
                  height={32}
                  alt=""
                  loading="eager"
                  src={image}
                />
                <p>{label}</p>
              </li>
            ))}
          </ul>
        )
      }
    </div>
    {
      imageUrl && (
        <Image
          width={660}
          height={322}
          alt=""
          src={imageUrl}
          class="shadow-primary/30 rounded-xl object-cover shadow-lg"
          loading="eager"
          fetchpriority="high"
        />
      )
    }
  </div>
</section>
