---
import KpiListItem from "./kpi-list-item.astro";

type Props = {
  keyPoints: {
    iconUrl?: string;
    title: string;
    description: string;
  }[];
};

const { keyPoints } = Astro.props;
---

<ul
  class="container grid items-center gap-8 py-20 md:grid-cols-2 lg:grid-cols-4"
>
  {
    keyPoints.map(({ description, title, iconUrl }) => (
      <KpiListItem metric={title} label={description} imageURL={iconUrl} />
    ))
  }
</ul>
