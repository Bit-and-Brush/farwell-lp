---
import Image from "astro/components/Image.astro";

type Props = {
  icon: string;
  title: string;
  description: string;
};

const { icon, title, description } = Astro.props;
---

<li class="space-y-6 rounded-xl border p-6 shadow-xs">
  <div class="flex items-center gap-3">
    {icon && <Image src={icon} alt={title} width={24} height={24} />}
    <p class="text-secondary text-xl font-bold">{title}</p>
  </div>
  <p class="text-sm">
    {description}
  </p>
</li>
